[Unit]
Description={{ app_name }} Phoenix Application
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/{{ app_name }}
EnvironmentFile=/opt/{{ app_name }}/prod.env
ExecStart=/opt/comments-app/_build/prod/rel/comments_app/bin/comments_app start
ExecStop=/opt/comments-app/_build/prod/rel/comments_app/bin/comments_app stop
Restart=on-failure
RestartSec=5
SyslogIdentifier={{ app_name }}

[Install]
WantedBy=multi-user.target
